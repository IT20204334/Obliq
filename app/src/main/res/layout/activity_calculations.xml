<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkboxPaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calbg"
    tools:context=".Calculations">

    <CheckBox
        android:id="@+id/theoryCheckbox"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        android:text="@string/theoryCheckbox"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic" />

    <CheckBox
        android:id="@+id/paperCheckbox"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:text="@string/paperCheckbox"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/revisionCheckbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/revisionCheckbox" />

    <TextView
        android:id="@+id/topic"
        android:layout_width="259dp"
        android:layout_height="92dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:text="@string/topic"
        android:textColor="@android:color/background_dark"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="171dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#2D3665"
        android:text="@string/btnCheck"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theoryCheckbox" />

    <CheckBox
        android:id="@+id/revisionCheckbox"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:text="@string/revisionCheckbox"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/theoryCheckbox"
        app:layout_constraintStart_toEndOf="@+id/theoryCheckbox" />

    <TextView
        android:id="@+id/registrationFee"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:text="@string/registrationFee"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheck" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        android:text="@string/answer"
        android:textColor="#450202"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/registrationFee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/registrationFee" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="184dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@string/confirm"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationFee" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="143dp"
        android:layout_height="164dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calc" />

</androidx.constraintlayout.widget.ConstraintLayout>