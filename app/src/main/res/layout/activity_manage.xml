<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oblig_marksbg"
    tools:context=".ManageActivity">

    <Button
        android:id="@+id/marksBtn"
        android:layout_width="340dp"
        android:layout_height="84dp"
        android:layout_marginTop="124dp"
        android:text="@string/marksBtn"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="#833FE3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addNoticeBtn"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="360dp"
        android:text="@string/addNoticeBtn"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="#26E181"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marksBtn" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="306dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:text="@string/textviewNew18"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="197dp"
        android:layout_height="223dp"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/obliq_owl2" />

</androidx.constraintlayout.widget.ConstraintLayout>